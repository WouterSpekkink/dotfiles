#!/bin/bash

# If the argument to gemtoo is empty, just exit
[ -z "$1" ] && exit
# Otherwise insert the argument (a string), along with a date header, at the 9th line.
sed -i "9i## $(date +'%a %d %b, %H:%M')\n$1\n" ~/gemini/writings/micro.gmi &&
# And then exit
rsync -aP ~/gemini/writings/micro.gmi gemini:~/gemini/writings/micro.gmi

